<div class="panel">
  <div class="panel-heading">
    <h1>Listing pins</h1>
  </div>
  <div class="panel-heading">
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= link_to 'Show', pin, class: "btn btn-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary btn-sm" %></td>
            <td><%= link_to 'Destroy', pin, class: "btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>
